<!-- REQUIRE THE D3 LIBRARY Visual Sedimentation -->
<script type="text/javascript" src="/assets/_VisualSedimentation.js"></script> 

<!-- REQUIRE APP.JS FOR THE WEBSOCKET -->
<script type="text/javascript" src="/assets/app.js"></script> 

<!-- CURRENCY FORMAT LIBRARY -->
<script src="//cdnjs.cloudflare.com/ajax/libs/numeral.js/1.4.5/numeral.min.js"></script>

<!-- creates a var=priceUSD for JS -->
<%= javascript_tag do %>
  priceUSD = "<%= @parsed_response["market_price_usd"] %>"
<% end %>

<div class="row">

  <div class="col-md-9">
    <div class="btn-center">
      <button class="btn btn-default" onclick="toggleBitcoin()" >Bitcoin Loading</button> 
      <button class="btn btn-default" onclick="toggleDogecoin()">Dogecoin Loading</button>
    </div>

    <div class="content">
      <div id="myDemo">
        <script type="text/javascript" src="/assets/moneyFalling.js"></script>
      </div>
    </div> 
  </div><!-- end col-md-9 -->

  <div class="col-md-3">
    <div class="core-header-panel display-grand"><!-- Polymer core element -->

      <%= link_to image_tag("Federallogo.png"), root_path, method: :get %>
      <br>
      <%= link_to "Stats", stats_path %>
      <%= link_to "Exchange", exchange_path %>
      <%= link_to "Charts", charts_path %>
      <%= link_to "Bubble Chart", bubble_path %>

      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" class="form-control" placeholder="Search BTC Address">
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
      </form>

      <div>
        <h5>Market Price USD: $<%= @parsed_response["market_price_usd"] %></h5><!-- current market price -->

      <div>

      <div id="grandtotal" class="display-grand">
        Total <!-- Keeps a running tab of USD grand toatakamount -->
      </div>

      <ul class="nav nav-tabs" style="margin-bottom: 15px;">
        <li class="active">
          <a href="#bitcoins" data-toggle="tab">
            BTC Amount
          </a>
        </li>
        <li>
          <a href="#dollars" data-toggle="tab" >
            Dollar Value
          </a>
        </li>
      </ul>

      <div id="myTabContent" class="tab-content">
        <div class="tab-pane fade active in" id="bitcoins">
          <div id="output" class="btclist">
            <div></div><!-- required for .insertBefore -->
          </div>
        </div>

        <div class="tab-pane fade" id="dollars">
          <div id="dollar" class="btclist">
            <div></div><!-- required for .insertBefore -->
          </div>
        </div>
      </div><!-- end of myTabContent -->

      <div>
        DONATE 
      </div>
  
    </div><!-- end core-header-panel -->
  </div><!-- end col-md-3 -->
</div><!-- end row -->

