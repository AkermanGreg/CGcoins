<h1>Block Chain Stats</h1><br />
<script type="text/javascript" src="/assets/addressSearch.js"></script> 
<input type="text"></input>
<button id="addressSearch"></button>
<p id="blockchain"></p>

<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <table class="table table-striped">
      <tr>
        <!-- This get's Block Chain statistics --> 
        <td>Market Price USD:</td><td> <%= @parsed_response["market_price_usd"] %></td>
