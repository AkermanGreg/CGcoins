            <td colspan="2"><strong>Transactions</strong></td>
          </tr>
          <tr>
            <td>Number of Transactions</td>
            <td><%=@rbody["n_tx"] %></td>
          </tr>
          <tr>
            <td>Total Received</td>
            <td>
               <%=number_to_currency(thePriceTotal) %>
            </td>
          </tr>
          <tr>
            <td>Final Balance</td>
            <td><%=@rbody["final_balance"] %></td>
          </tr>
        </table>
        
          <% end %>
        </div><!-- Let's end col-md-6 -->
      </div> <!-- Let's end row here -->

