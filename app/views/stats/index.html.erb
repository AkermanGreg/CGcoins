                <% end %>
              </td>
              <td>
               <% if @show_data && @show_data != "" %> 

               <% @outs.each do |i| %>
               <i>Receiver:</i> <%= i["addr"] %><br />
               <% end %>
               <% end %>
              </td>
              <td>
               <% if @show_data && @show_data != "" %> 

               <% @outs.each do |i| %>
               <%= number_to_currency(i["value"] * @parsed_response["market_price_usd"] / 100000000) %><br />
               <% end %>
               <% end %>
             </td>


           </tr>


         </table>
       </div>
     </div>
