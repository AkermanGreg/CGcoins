        <td>Hash Rate: </td><td> <%= @parsed_response["hash_rate"] %></td>
      </tr>
      <tr>
        <td>Total Fees BTC: </td><td> <%= @parsed_response["total_fees_btc"] %></td>
      </tr>
      <tr>
        <td>N BTC Mined:</td><td> <%= @parsed_response["n_btc_mined"] %></td>
      </tr>
